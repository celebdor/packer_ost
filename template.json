{
    "push": {
      "name": "",
      "vcs": true
    },
    "variables": {
        "atlas_username": "{{env `ATLAS_USERNAME`}}",
        "atlas_name": "{{env `ATLAS_NAME`}}"
    },
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
            "scripts": [
                "scripts/base.sh",
                "scripts/vagrant.sh",
                "scripts/dep.sh",
                "scripts/cleanup.sh",
                "scripts/allinone.sh"
            ]
        }
    ],
    "builders": [
        {
            "type": "qemu",
            "format": "qcow2",
            "accelerator": "kvm",
            "disk_size": 20480,

            "iso_url": "http://releases.ubuntu.com/trusty/ubuntu-14.04.3-server-amd64.iso",
            "iso_checksum": "a3b345908a826e262f4ea1afeb357fd09ec0558cf34e6c9112cead4bb55ccdfb",
            "iso_checksum_type": "sha256",

            "http_directory": "http",

            "headless": true,
            "boot_wait": "10s",
            "boot_command": [
                "<esc><esc><enter><wait>",
                "/install/vmlinuz url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=us ",
                "hostname={{ .Name }} ",

                "keyboard-configuration/modelcode=SKIP ",
                "keyboard-configuration/layout=USA ",
                "keyboard-configuration/variant=USA ",

                "passwd/user-fullname={{user `user`}} ",
                "passwd/user-password-again={{user `password`}} ",
                "passwd/user-password={{user `password`}} ",
                "passwd/username={{user `user`}} ",

                "initrd=/install/initrd.gz -- <enter>"
            ],

            "ssh_username": "vagrant",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "20m",
            "shutdown_command": "echo '/sbin/halt -h -p' > shutdown.sh; echo 'vagrant'|sudo -S bash 'shutdown.sh'"
        }
    ],
    "post-processors": [
        [{
            "type": "vagrant",
            "keep_input_artifact": false
        },
        {
            "type": "atlas",
            "only": ["qemu"],
            "artifact": "{{user `atlas_username`}}/{{user `atlas_name`}}",
            "artifact_type": "vagrant.box",
            "metadata": {
                "provider": "libvirt",
                "version": "0.0.1"
            }
        }
        ]
    ]
}
